{
    "name": "ybwork-shaderlab",
    "displayName": "Beautify ShaderLab",
    "description": "ShaderLab高亮格式化插件",
    "version": "0.1.0",
    "publisher": "ybwork",
    "author": {
        "name": "ybwork",
        "url": "https://ybwork.cn:12343/ybwork",
        "email": "ybworkcn@qq.com"
    },
    "icon": "shaderlab.png",
    "repository": {
        "url": "https://ybwork.cn:12343/vscode-extension/shaderlab.git"
    },
    "keywords": [
        "vscode",
        "plugin",
        "format",
        "shaderlab",
        "unity"
    ],
    "engines": {
        "vscode": "^1.84.0"
    },
    "categories": [
        "Programming Languages",
        "Formatters"
    ],
    "activationEvents": [
        "onLanguage:ShaderLab",
        "onLanguage:HLSL"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [],
        "menus": {
            "editor/context": []
        },
        "keybindings": [],
        "languages": [
            {
                "id": "ShaderLab",
                "extensions": [
                    ".shader"
                ]
            },
            {
                "id": "HLSL",
                "extensions": [
                    ".cginc"
                ]
            }
        ],
        "grammars": [
            {
                "language": "ShaderLab",
                "scopeName": "source.shaderlab",
                "path": "./syntaxes/shaderlab.tmLanguage.json"
            }
        ],
        "configuration": [
            {
                "title": "Beautify ShaderLab",
                "properties": {
                    "Unity CGIncludes Path": {
                        "type": "string",
                        "description": "Unity的CGIncludes文件夹路径"
                    }
                }
            }
        ]
    },
    "scripts": {
        "tsc": "tsc",
        "build": "tsc && vsce package"
    },
    "devDependencies": {
        "@types/node": "^20.4.5",
        "@types/vscode": "^1.84.1",
        "@typescript-eslint/eslint-plugin": "latest",
        "@typescript-eslint/parser": "latest",
        "eslint": "latest",
        "typescript": "^5.1.3",
        "@vscode/vsce": "^2.15.0"
    }
}
