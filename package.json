{
    "name": "ybwork-shaderlab",
    "displayName": "Beautify ShaderLab",
    "description": "ShaderLab高亮格式化插件",
    "version": "0.1.0",
    "publisher": "ybwork",
    "author": {
        "name": "ybwork",
        "url": "https://ybwork.cn:12343/ybwork",
        "email": "ybworkcn@qq.com"
    },
    "icon": "shaderlab.png",
    "repository": {
        "url": "https://ybwork.cn:12343/vscode-extension/shaderlab.git"
    },
    "keywords": [
        "vscode",
        "plugin",
        "format",
        "shaderlab",
        "unity"
    ],
    "engines": {
        "vscode": "^1.84.0"
    },
    "categories": [
        "Programming Languages",
        "Formatters"
    ],
    "activationEvents": [
        "onLanguage:shaderlab",
        "onLanguage:hlsl"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "ybwork-shaderlab.activate",
                "title": "Activate Beautify ShaderLab",
                "category": "ShaderLab"
            },
            {
                "command": "ybwork-shaderlab.format",
                "title": "Format ShaderLab",
                "category": "ShaderLab"
            }
        ],
        "menus": {
            "editor/context": []
        },
        "keybindings": [],
        "languages": [
            {
                "id": "shaderlab",
                "extensions": [
                    ".shader"
                ]
            },
            {
                "id": "hlsl",
                "extensions": [
                    ".cginc",
                    ".hlsl",
                    ".hlsli",
                    ".compute"
                ]
            }
        ],
        "grammars": [
            {
                "language": "shaderlab",
                "scopeName": "source.shaderlab",
                "path": "./syntaxes/shaderlab.tmLanguage.json"
            },
            {
                "language": "hlsl",
                "scopeName": "source.hlsl",
                "path": "./syntaxes/hlsl.tmLanguage.json"
            }
        ],
        "configuration": [
            {
                "title": "Beautify ShaderLab",
                "properties": {
                    "Unity CGIncludes Path": {
                        "type": "string",
                        "description": "Unity的CGIncludes文件夹路径（如：C:/Program Files/Unity/Hub/Editor/2022.3.0f1/Editor/Data/CGIncludes）",
                        "deprecationMessage": "请使用 ybwork-shaderlab.cgIncludesPath 代替"
                    },
                    "ybwork-shaderlab.cgIncludesPath": {
                        "type": "string",
                        "description": "Unity 内置 Shader 的 CGIncludes 文件夹路径（如：C:/Program Files/Unity/Hub/Editor/2022.3.0f1/Editor/Data/CGIncludes）"
                    },
                    "ybwork-shaderlab.unityProjectPath": {
                        "type": "string",
                        "description": "Unity 项目根目录路径（包含 Assets、Packages、Library 文件夹的目录）。如果工作区已包含 Unity 项目，可以不配置此项。"
                    },
                    "ybwork-shaderlab.packageMappings": {
                        "type": "object",
                        "default": {},
                        "description": "Unity Package 路径映射。用于将 Packages/xxx 格式的 include 路径映射到实际文件系统路径。",
                        "additionalProperties": {
                            "type": "string"
                        },
                        "examples": [
                            {
                                "com.unity.render-pipelines.core": "D:/UnityProjects/MyProject/Library/PackageCache/com.unity.render-pipelines.core@14.0.8",
                                "com.unity.render-pipelines.universal": "D:/UnityProjects/MyProject/Library/PackageCache/com.unity.render-pipelines.universal@14.0.8"
                            }
                        ]
                    }
                }
            }
        ]
    },
    "scripts": {
        "tsc": "tsc",
        "compile": "tsc -p .",
        "watch": "tsc -w -p .",
        "build": "npm run compile && vsce package",
        "test:repro": "ts-node tests/variable_extraction.test.ts"
    },
    "devDependencies": {
        "@types/node": "^20.4.5",
        "@types/vscode": "^1.84.1",
        "@typescript-eslint/eslint-plugin": "latest",
        "@typescript-eslint/parser": "latest",
        "eslint": "latest",
        "typescript": "^5.1.3",
        "@vscode/vsce": "^2.15.0",
        "ts-node": "^10.9.1"
    }
}
